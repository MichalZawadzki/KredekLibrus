@model MichalZawadzkiLibrus.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<div class="card-panel grey lighten-5">
    <h4>@ViewBag.Title as a teacher</h4>

    @using (Html.BeginForm("Login", "Teacher"))
    {
        @Html.EditorForModel()
        <p>
            <button type="submit" class="btn">Login &raquo;</button>
        </p>
    }
</div>